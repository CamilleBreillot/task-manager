<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li><i class="far fa-check-square"></i>    <%= link_to task.title, task_path(task.id) %>
      <%= link_to task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } do  %>
              <i class="far fa-trash-alt"></i>
              <% end %>
      </li>
    <% else %>
      <li><i class="far fa-square"></i>    <%= link_to task.title, task_path(task.id) %>
      <%= link_to task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } do  %>
              <i class="far fa-trash-alt"></i>
              <% end %>
      </li>
    <% end %>
  <% end %>
</ul>

<p><i class="fas fa-plus"></i>  <%= link_to "Add a new task", new_task_path %></p>
